#include <stdio.h>

int main(int argc, char** argv)
{
	int k,Product;
	double n,sum;
	
	Product = 1;
	sum = 2;
	for(k=2;sum<0.0000001;k++){
		Product *= k;
		sum = sum +(1.0 / Product);
	}
	
	printf("e = %.10Lf",sum);
	
	return 0;
}
